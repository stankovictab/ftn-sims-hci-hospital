<Page x:Class="ftn_sims_hci_hospital.NotificationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ftn_sims_hci_hospital"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotificationsPage">

    <Grid>
        <ListView Margin="10,10,9.6,201" Name="notificationTable">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Naslov" Width="100" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Telo" Width="100" DisplayMemberBinding="{Binding Body}" />
                    <GridViewColumn Header="Datum" Width="100" DisplayMemberBinding="{Binding Date}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
