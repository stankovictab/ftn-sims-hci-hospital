<Window x:Class="ManagerKT3.DynamicCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerKT3"
        mc:Ignorable="d"
        Title="DynamicCreation" Height="450" Width="800">
    <Grid>
        <Label Content="Equipment ID:" HorizontalAlignment="Left" Margin="154,103,0,0" VerticalAlignment="Top"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="154,162,0,0" VerticalAlignment="Top"/>
        <Label Content="Amount:" HorizontalAlignment="Left" Margin="154,217,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="dynamicId" HorizontalAlignment="Left" Margin="317,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="dynamicName" HorizontalAlignment="Left" Margin="317,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="dynamicAdd" Content="Add" HorizontalAlignment="Left" Margin="176,315,0,0" VerticalAlignment="Top" Height="47" Width="72" Click="dynamicAdd_Click"/>
        <TextBox x:Name="dynamicAmount" HorizontalAlignment="Left" Margin="317,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
