<Window x:Class="ftn_sims_hci_hospital.DynamicUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ftn_sims_hci_hospital"
        mc:Ignorable="d"
        Title="DynamicUpdate" Height="450" Width="800">
    <Grid>
        <Label Content="Equipment ID:" HorizontalAlignment="Left" Margin="154,103,0,0" VerticalAlignment="Top"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="154,146,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="dynamicId" HorizontalAlignment="Left" Margin="317,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="dynamicName" HorizontalAlignment="Left" Margin="317,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="dynamicUpdate" Content="Update" HorizontalAlignment="Left" Margin="291,243,0,0" VerticalAlignment="Top" Height="47" Width="72" Click="dynamicUpdate_Click"/>
        <Label Content="Current Amount:&#xD;&#xA;" HorizontalAlignment="Left" Margin="154,192,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="dynamicAmount" HorizontalAlignment="Left" Margin="317,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
