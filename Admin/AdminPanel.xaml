        <Rectangle Fill="#FF95C0D9" HorizontalAlignment="Left" Height="380" Margin="61,131,0,0" VerticalAlignment="Top" Width="380" RadiusX="25" RadiusY="25"/>
        <Rectangle Fill="#FFAED7C8" HorizontalAlignment="Left" Height="380" Margin="601,131,0,0" VerticalAlignment="Top" Width="380" RadiusX="25" RadiusY="25"/>
        <Button Content="Doctor" HorizontalAlignment="Left" Margin="167,301,0,0" VerticalAlignment="Top" Width="160" Background="#FF509CD3" BorderBrush="{x:Null}" Foreground="White" Height="50" FontSize="24" FontWeight="Bold" FontFamily="Arial" Click="Doctor_Click"/>
