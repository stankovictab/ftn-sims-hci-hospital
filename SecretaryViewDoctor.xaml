            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="124" Margin="10,10,0,0" VerticalAlignment="Top" Width="124" Source="user.png"/>
        <Label x:Name="lbfirstname" Content="Firstname" HorizontalAlignment="Left" Height="29" Margin="10,153,0,0" VerticalAlignment="Top" Width="62"/>
        <Label x:Name="lblastname" Content="Lastname" HorizontalAlignment="Left" Height="29" Margin="10,209,0,0" VerticalAlignment="Top" Width="63" RenderTransformOrigin="0.492,1.111"/>
        <TextBox x:Name="tblastname" HorizontalAlignment="Left" Height="29" Margin="96,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" IsEnabled="False"/>
        <TextBox x:Name="tbspecialization" HorizontalAlignment="Left" Height="29" Margin="96,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" IsEnabled="False"/>
        <TextBox x:Name="tbgender" HorizontalAlignment="Left" Height="29" Margin="135.5,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" IsEnabled="False" Grid.Column="1"/>
        <TextBox x:Name="tbjmbg" HorizontalAlignment="Left" Height="29" Margin="135.5,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" IsEnabled="False" Grid.Column="1"/>
