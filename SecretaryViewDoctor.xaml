        <Label x:Name="lbjmbg" Content="JMBG" HorizontalAlignment="Left" Height="29" Margin="83,153,0,0" VerticalAlignment="Top" Width="40" Grid.Column="1"/>
        <Label x:Name="lbgender" Content="Gender" HorizontalAlignment="Left" Height="29" Margin="82.5,209,0,0" VerticalAlignment="Top" Width="48" Grid.Column="1"/>
        <Label x:Name="lbspecialization" Content="Specialization" HorizontalAlignment="Left" Height="29" Margin="9,263,0,0" VerticalAlignment="Top" Width="82"/>
        <Label x:Name="lbshift" Content="Shift" HorizontalAlignment="Left" Height="29" Margin="10,320,0,0" VerticalAlignment="Top" Width="36"/>
        <ComboBox x:Name="cbshift" HorizontalAlignment="Left" Margin="96,320,0,0" VerticalAlignment="Top" Width="128" Height="29" BorderBrush="Black" Background="White"/>
        <Button x:Name="btnsave" Content="Save changes" HorizontalAlignment="Left" Height="44" Margin="123,305,0,0" VerticalAlignment="Top" Width="140" Background="White" BorderBrush="Black" Foreground="Black" Grid.Column="1" Click="btnsave_Click" FontSize="20"/>

