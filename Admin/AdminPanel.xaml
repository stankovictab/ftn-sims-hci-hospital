<Window x:Class="ftn_sims_hci_hospital.Admin.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ftn_sims_hci_hospital.HCI"
        mc:Ignorable="d"
        Title="AdminPanel" Height="600" Width="1050">
    <Grid Background="White">
        <Label Content="Logged in as" HorizontalAlignment="Center" Margin="365,15,-167,0" VerticalAlignment="Top" FontSize="30" Width="844" Background="{x:Null}" Foreground="#FF3C3C3C" FontFamily="Arial"/>
